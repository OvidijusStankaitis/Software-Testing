pipeline {
    agent any
    triggers {
        // Cron trigger: run every day at 2:00 AM.
        cron('0 2 * * *')
    }
    stages {
        stage('Checkout Code') {
            steps {
                // Check out the code from your Git repository.
                checkout scm
            }
        }
        stage('Run Tests') {
            steps {
                // Run your tests (adjust the command if your test runner file is named differently)
                sh 'python3 run_tests.py'
            }
        }
    }
}
